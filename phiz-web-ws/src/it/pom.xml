<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>%{project.parent.groupId}</groupId>
        <artifactId>%{project.parent.artifactId}</artifactId>
        <version>%{project.parent.version}</version>
        <relativePath>../../../%{project.parent.artifactId}</relativePath>
    </parent>
    
    <artifactId>%{project.artifactId}-it</artifactId>
    <packaging>pom</packaging>
    
    <description>Public Health Immunization Data Exchange (PHIZ) web services web application integration testing Maven project.</description>
    
    <properties>
        <!-- Project properties -->
        <project.basedir.all>${project.basedir}/../../..</project.basedir.all>
    </properties>
    
    <dependencies/>
    
    <build>
        <directory>${project.basedir}/..</directory>
        
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-invoker-plugin</artifactId>
                <configuration>
                    <skipInvocation>true</skipInvocation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <id>test-integration</id>
                        <configuration>
                            <skip>false</skip>
                            <systemPropertyVariables>
                                <phiz.log.file.name>%{project.artifactId}-test-it</phiz.log.file.name>
                                <phiz.test.it.web.soapui.output.dir>${project.build.directory}/surefire-reports</phiz.test.it.web.soapui.output.dir>
                                <phiz.test.it.web.soapui.project.file>${project.build.itSoapUiDirectory}/soapui-%{project.artifactId}.xml</phiz.test.it.web.soapui.project.file>
                                <phiz.test.it.web.soapui.settings.file>${project.build.itSoapUiDirectory}/soapui-settings-%{project.artifactId}.xml</phiz.test.it.web.soapui.settings.file>
                                <soapui.https.protocols>#{ T(gov.hhs.onc.phiz.crypto.PhizTlsVersions).TLS_1_2_NAME }</soapui.https.protocols>
                                <soapui.https.session.invalidate>true</soapui.https.session.invalidate>
                                <soapui.sslcontext.algorithm>#{ T(gov.hhs.onc.phiz.crypto.PhizTlsVersions).TLS_1_2_NAME }</soapui.sslcontext.algorithm>
                            </systemPropertyVariables>
                            <workingDirectory>%{project.build.testDebShareDataDirectory}</workingDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.kuali.maven.plugins</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>read-pom-properties</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>