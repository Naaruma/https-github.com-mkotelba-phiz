<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <!--====================================================================================================
    = KEY STORES
    =====================================================================================================-->
    <!--suppress SpringPlaceholdersInspection -->
    <beans:bean id="keyStoreKeyManagerTomcatWeb" parent="keyStoreJks" abstract="true"
        p:password="${phiz.web.server.tomcat.crypto.manager.key.store.key.pass}">
        <beans:property name="resource">
            <beans:bean class="org.springframework.core.io.ByteArrayResource"
                c:byteArray="#{ T(org.apache.commons.codec.binary.Base64).decodeBase64('${phiz.web.server.tomcat.crypto.manager.key.store.key.content}') }"/>
        </beans:property>
    </beans:bean>
    
    <!--suppress SpringPlaceholdersInspection -->
    <beans:bean id="keyStoreTrustManagerTomcatWeb" parent="keyStoreJks" abstract="true"
        p:password="${phiz.web.server.tomcat.crypto.manager.trust.store.key.pass}">
        <beans:property name="resource">
            <beans:bean class="org.springframework.core.io.ByteArrayResource"
                c:byteArray="#{ T(org.apache.commons.codec.binary.Base64).decodeBase64('${phiz.web.server.tomcat.crypto.manager.trust.store.key.content}') }"/>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = SECURE SOCKETS LAYER SOCKET FACTORIES
    =====================================================================================================-->
    <beans:bean id="sslSocketFactorySoapUi" parent="sslSocketFactoryBase">
        <beans:property name="sslContext">
            <beans:bean parent="sslContextTomcatWeb">
                <beans:property name="keyManagers">
                    <beans:null/>
                </beans:property>
                <beans:property name="trustManagers">
                    <beans:null/>
                </beans:property>
            </beans:bean>
        </beans:property>
        <beans:property name="sslParameters">
            <beans:bean parent="sslParamsTomcatWeb"/>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = SOAPUI TESTCASE RUNNERS
    =====================================================================================================-->
    <beans:bean id="soapUiTestCaseRunner" class="com.eviware.soapui.SoapUIProTestCaseRunner" abstract="true"
        p:exportAll="true"
        p:JUnitReport="true"
        p:maxErrors="#{ T(java.lang.Integer).MAX_VALUE }"
        p:printAlertSiteReport="true"
        p:printReport="true">
        <beans:property name="reportFormats">
            <beans:array>
                <beans:value>XML</beans:value>
            </beans:array>
        </beans:property>
    </beans:bean>
    
    <!--suppress SpringPlaceholdersInspection -->
    <beans:bean id="soapUiTestCaseRunnerWeb" class="gov.hhs.onc.phiz.web.test.impl.PhizSoapUiTestCaseRunner" parent="soapUiTestCaseRunner" abstract="true"
        p:outputFolder="${phiz.test.it.web.soapui.output.dir}"
        p:projectFile="${phiz.test.it.web.soapui.project.file}"
        p:settingsFile="${phiz.test.it.web.soapui.settings.file}"
        p:sslSocketFactory-ref="sslSocketFactorySoapUi"/>
</beans:beans>