    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>gov.hhs.onc.phiz</groupId>
        <artifactId>phiz-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../phiz-parent</relativePath>
    </parent>
    
    <artifactId>phiz-core</artifactId>
    
    <description>Public Health Immunization Data Exchange (PHIZ) common components Maven project.</description>
    
    <properties>
        <!-- Project properties -->
        <project.basedir.all>${project.basedir}/..</project.basedir.all>
        <!-- Project build CXF source properties -->
        <project.build.cxfSourceDirectory>${project.basedir}/src/main/cxf</project.build.cxfSourceDirectory>
        <project.build.cxfGeneratedSourceDirectory>${project.build.directory}/generated-sources/cxf</project.build.cxfGeneratedSourceDirectory>
        <!-- Project build JAX-WS source properties -->
        <project.build.jaxwsSourceDirectory>${project.basedir}/src/main/jaxws</project.build.jaxwsSourceDirectory>
        <!-- Project build XML schema properties -->
        <project.build.schemaDirectory>${project.build.outputDirectory}/META-INF/phiz/schema</project.build.schemaDirectory>
        <!-- Project build XML schema source properties -->
        <project.build.schemaSourceDirectory>${project.basedir}/src/main/schema</project.build.schemaSourceDirectory>
        <!-- Project build WSDL properties -->
        <project.build.wsdlDirectory>${project.build.outputDirectory}/META-INF/phiz/wsdl</project.build.wsdlDirectory>
        <!-- Project build WSDL source properties -->
        <project.build.wsdlSourceDirectory>${project.basedir}/src/main/wsdl</project.build.wsdlSourceDirectory>
    </properties>
    
    <dependencies>
        <!-- Compile dependencies (inherited) -->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
